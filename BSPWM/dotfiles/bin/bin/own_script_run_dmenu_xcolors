# get the colours
source "$HOME/.my_Xcolors/active-tempus-theme.sh"

# run dmenu with custom colours, font, and prompt
dmenu_run -l 10 -p "Run command" -nb "$background" -nf "$foreground" -sb "$color2" -sf "$background" -fn "DejaVu Sans Mono-12"
